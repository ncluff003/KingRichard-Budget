extends baseEmail

block content
  section.company-header 
    div.company-header__logo
      img.company-header__logo-image(src="cid:company-logo" alt="King Richard Logo")
      p.company-header__logo-text King Richard
  p.salutations #{greeting} #{firstName},
  section.content-section
    p.opening-statement No worries about forgetting your username or password!
    p.main-statement Your username is #{username}, and changing your password is only one click away on the button below! 😄 👍
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset Your Password
  section.disclaimer
    p If you had not requested this, or did not forget your email, please disregard this email. 😄 👍