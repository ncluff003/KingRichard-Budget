extends base
  
block Navigation
  ul.navigation__landing-navigation.r__navigation__landing-navigation
    button.navigation__landing-navigation__user.r__navigation__landing-navigation__user
      i.fas.fa-user-circle.navigation__landing-navigation__user-icon.r__navigation__landing-navigation__user-icon
      p.navigation__landing-navigation__user-text.r__navigation__landing-navigation__user-text #{data.user.firstname}

block Unique-Content
  section.app-background.r__app-background.column_1-24.row_2-17
    section.app-container.r__app-container
      header.app-container__header--landing
        h1.app-container__header--landing__title= `${data.calendar.getGreeting()} ${data.user.firstname} ${data.user.lastname}`
      section.budget-card-container.r__budget-card-container
        i.fas.fa-arrow-alt-circle-left
        div.budget-card-container__cards-container
          section.budget-card--create
            i.fas.fa-plus.budget-card--create__icon
            p.budget-card--create__text Create Budget
        i.fas.fa-arrow-alt-circle-right
  section.user-profile-background.r__user-profile-background.column_1-24.row_2-17 
    section.user-profile-card.r__user-profile-card
      section.user-profile-card__first-impression
        section.user-profile-card__first-impression__image-container
          #{data.user.photo}
          button.user-profile-card__first-impression__update-photo-button
            i.fas.fa-user-edit
            p.user-profile-card__first-impression__update-photo-button__text Update Photo        
        section.user-profile-card__first-impression__name-container
          p.user-profile-card__first-impression__name-container--first #{data.user.firstname}
          p.user-profile-card__first-impression__name-container--last #{data.user.lastname}
      section.user-profile-card__user-info
        section.user-profile-card__user-info__row
          button.user-profile-card__user-info__row__button
            i.fas.fa-user-edit.user-profile-card__user-info__row__button--icon
            p.user-profile-card__user-info__row__button--text Username
          section.user-profile-card__user-info__row-info
            input.user-profile-card__user-info__row-info--text(value=`${data.user.username}`) 
        section.user-profile-card__user-info__row
          button.user-profile-card__user-info__row__button
            i.fas.fa-user-edit.user-profile-card__user-info__row__button--icon
            p.user-profile-card__user-info__row__button--text Password
          section.user-profile-card__user-info__row-info
            input.user-profile-card__user-info__row-info--text(value=`${data.user.password}` type='password') 
        section.user-profile-card__user-info__row--hidden
          button.user-profile-card__user-info__row--hidden__button
            i.fas.fa-user-edit.user-profile-card__user-info__row--hidden__button--icon
            p.user-profile-card__user-info__row--hidden__button--text Repeat Password
          section.user-profile-card__user-info__row--hidden-info
            input.user-profile-card__user-info__row--hidden-info--text(value=`${data.user.password}` type='password') 
        section.user-profile-card__user-info__row
          button.user-profile-card__user-info__row__button
            i.fas.fa-user-edit.user-profile-card__user-info__row__button--icon
            p.user-profile-card__user-info__row__button--text Email
          section.user-profile-card__user-info__row-info
            input.user-profile-card__user-info__row-info--text(value=`${data.user.email}` type='email') 
        section.user-profile-card__user-info__row--hidden
          button.user-profile-card__user-info__row--hidden__button
            i.fas.fa-user-edit.user-profile-card__user-info__row--hidden__button--icon
            p.user-profile-card__user-info__row--hidden__button--text Repeat Email
          section.user-profile-card__user-info__row--hidden-info
            input.user-profile-card__user-info__row--hidden-info--text(value=`${data.user.email}` type='email') 
        section.user-profile-card__user-info__row
          button.user-profile-card__user-info__row__button
            i.fas.fa-user-edit.user-profile-card__user-info__row__button--icon
            p.user-profile-card__user-info__row__button--text Phone Number
          section.user-profile-card__user-info__row-info
            input.user-profile-card__user-info__row-info--text(value=`(000) 000 - 000` type='tel' pattern="\([0-9]{3}\) [0-9]{3} \- [0-9]{4}") 
        section.user-profile-card__user-info__row--hidden
          button.user-profile-card__user-info__row--hidden__button
            i.fas.fa-user-edit.user-profile-card__user-info__row--hidden__button--icon
            p.user-profile-card__user-info__row--hidden__button--text Repeat Phone Number
          section.user-profile-card__user-info__row--hidden-info
            input.user-profile-card__user-info__row--hidden-info--text(value=`(000) 000 - 000` type='tel' pattern="\([0-9]{3}\) [0-9]{3} \- [0-9]{4}") 
